pipeline {
  agent {
    node {
      label 'jenkins-slave10.yvu.ch'
    }
  }
  stages {
    stage('Build') {
      steps {
        sh 'echo Build'
        sh 'cd Gadgeothek;./gradlew build'
        archiveArtifacts allowEmptyArchive: true, artifacts: 'Gadgeothek/app/build/outputs/apk/*.apk'
      }
    }

    stage('Unit Tests') {
      steps {
        sh 'echo Unit Tests'
        sh '(cd Gadgeothek;./gradlew test)'
        junit 'Gadgeothek/build/test-reports/*.xml'
      }
    }
    
    stage('End2End Tests') {
      steps {
        sh 'echo End2End Tests'
        
      }
    }
    
    stage('Package') {
        steps {
            sh 'echo Package'
        }
    }
  }
}